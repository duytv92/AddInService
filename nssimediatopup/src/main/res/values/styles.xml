<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="_nss_style_text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/_nss_color_white</item>
        <item name="android:paddingTop">@dimen/_nss_base_margin</item>
        <item name="android:paddingBottom">@dimen/_nss_base_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/_nss_color_black</item>
        <item name="android:textSize">@dimen/_nss_text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="_nss_style_tabs_phone_card" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_nss_text_size_normal</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="_nss_style_text_card_invoice">
        <item name="android:textSize">@dimen/_nss_text_size_normal</item>
        <item name="android:textColor">@color/_nss_color_black</item>

    </style>


    <style name="_nss_style_text_card_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_nss_base_margin</item>
        <item name="android:textColor">@color/_nss_color_black</item>
        <item name="android:textSize">@dimen/_nss_text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>